<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldenHour.Maui.LoginPage"
             xmlns:viewmodel="clr-namespace:GoldenHour.Maui.ViewModels"
             x:DataType="viewmodel:LoginPageViewModel"
             Shell.NavBarIsVisible="False"
             Title="Login">
    <VerticalStackLayout
        Spacing="25"
        Padding="30, 0"
        VerticalOptions="Center">
        <ActivityIndicator IsRunning="{Binding IsLoading}" />

        <VerticalStackLayout Spacing="5">
            <Label Text="Welcome!" FontSize="28" TextColor="Gray" HorizontalTextAlignment="Center" />
            <Label Text="Login to your account!" FontSize="18" TextColor="Gray" HorizontalTextAlignment="Center" />
        </VerticalStackLayout>

        <Frame Padding="5">
            <Entry x:Name="UserName" Placeholder="UserName" Text="{Binding UserName}" />
        </Frame>

        <Frame Padding="5">
            <Entry x:Name="Password" Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        </Frame>

        <Button Text="Log in" WidthRequest="100" CornerRadius="20" HorizontalOptions="Center"
            Command="{Binding LoginCommand}" />

    </VerticalStackLayout>
</ContentPage>